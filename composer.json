{
    "name": "arc-framework/framework",
    "description": "A simple modern framework for building WordPress plugins",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Feeney",
            "email": "webspannerdev@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "container-interop/container-interop": "1.2.*",
        "illuminate/config": "5.4.*",
        "illuminate/console": "5.4.*",
        "illuminate/container": "5.4.*",
        "illuminate/database": "5.4.*",
        "illuminate/filesystem": "5.4.*",
        "illuminate/http": "5.4.*",
        "illuminate/log": "5.4.*",
        "illuminate/routing": "5.4.*",
        "illuminate/support": "5.4.*",
        "illuminate/translation": "5.4.*",
        "illuminate/validation": "5.4.*",
        "illuminate/view": "5.4.*",
        "soundasleep/html2text": "~0.3",
        "symfony/var-dumper": "^3.2",
        "tightenco/collect": "5.4.*",
        "tijsverkoyen/css-to-inline-styles": "^2.2",
        "vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4":{
            "Arc\\": "src/Arc/"
        },
        "files": [
            "src/Arc/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/FrameworkTestCase.php",
            "tests/test-plugin/src/TestPlugin.php"
        ]
    },
    "require-dev": {
        "10up/wp_mock": "dev-master",
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "5.*",
        "symfony/css-selector": "~3.1",
        "symfony/dom-crawler": "~3.1"
    },
    "config" : {
        "sort-packages": true
    }
}
